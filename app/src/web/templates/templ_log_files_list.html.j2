<div class="w3-row-padding w3-margin-bottom">
{% for file in dir_list %}
  <div class="w3-quarter w3-margin-bottom">

     <div class="w3-card-4">
      <header class="w3-container w3-blue">
        <h4>{{file.name}}</h4>
      </header>
  
      <table class="w3-table">
        {% for idx, name in [('created',_('Created')), ('modified', _('Modified')), ('size', _('Size'))]%}
        <tr>
        <td>{{_(name)}}:</td>
        <td>{{file[idx]}}</td>
        </tr>
        {% endfor %}
      </table>
  
      <footer class="w3-blue">
        <a href="{{ url_for('web.send',file=file.name)}}" class="w3-button w3-hover-blue w3-hover-text-black"><i class="fa fa-file-export"></i>Â  {{_('Download File')}}</a>
      </footer>
    </div>

   </div>
{% if 0 == (loop.index%4) and not last %}
</div>
<div class="w3-row-padding w3-margin-bottom">
{% endif %}
{% endfor %}  
</div>

