{
  "name": "TSUN Gen3 Proxy",
  "version": "1.0.0",
  "slug": "tsun_gen3_proxy",
  "description": "Proxy pour onduleurs TSUN GEN3 vers MQTT",
  "arch": ["aarch64", "amd64", "armv7"],
  "startup": "services",
  "boot": "auto",
  "ports": {
    "5005/tcp": 5005,
    "10000/tcp": 10000
  },
  "map": ["config:rw", "share:rw"],
  "options": {
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_user": "homeassistant",
    "mqtt_password": "password",
    "log_level": "info"
  },
  "schema": {
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_password": "str",
    "log_level": "list(debug|info|warning|error)"
  },
  "image": "local/tsun_gen3_proxy-{arch}"
}
